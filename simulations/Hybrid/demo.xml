<?xml version="1.0"?>
<config>
  <!-- Core network connections -->
  <interface among="server internetCloud" address="10.0.1.x" netmask="255.255.255.0"/>
  <interface among="internetCloud router0" address="10.0.2.x" netmask="255.255.255.0"/>
  <interface among="router0 router1" address="10.0.3.x" netmask="255.255.255.0"/>
  <interface among="router0 router2" address="10.0.4.x" netmask="255.255.255.0"/>
  
  <!-- WiFi Domain -->
  <interface among="router1 accessPoint" address="10.0.5.x" netmask="255.255.255.0"/>
  
  <!-- LTE Domain -->
  <interface among="router2 pgw" address="10.0.6.x" netmask="255.255.255.0"/>
  
  <!-- Wireless interfaces - UE connectivity -->
  <interface among="accessPoint ue[*]" address="10.0.8.x" netmask="255.255.255.0"/>
  
  <!-- Default routes for endpoints -->
  <route hosts="server" destination="ue[*]" interface="ppp0" gatway="10.0.1.2"/>
  <route hosts="ue[*]" destination="server" interface="wlan0" gateway="10.0.8.1"/>
  <route hosts="ue[*]" destination="server" interface="cellular" gateway="10.0.7.1"/>
  
  <!-- eNB interfaces - fully specified -->
  <interface hosts="eNB" names="ppp0" address="10.0.7.2" netmask="255.255.255.0"/>
  <interface hosts="eNB" towards="ue[*]" address="10.0.9.1" netmask="255.255.255.0"/>

  <!-- PGW interfaces - fully specified -->
  <interface hosts="pgw" names="filterGate" address="10.0.6.2" netmask="255.255.255.0"/>
  <interface hosts="pgw" names="ppp0" address="10.0.7.1" netmask="255.255.255.0"/>

  <!-- UE interfaces - fully specified for at least the first UE -->
  <interface hosts="ue[0]" names="cellular" address="10.2.2.1" netmask="255.255.255.0"/>
  <interface hosts="ue[1]" names="cellular" address="10.0.9.3" netmask="255.255.255.0"/>
    <interface hosts="ue[0]" names="wlan0" address="10.0.8.2" netmask="255.255.255.0"/>
    <interface hosts="ue[1]" names="wlan0" address="10.0.8.3" netmask="255.255.255.0"/>
    <interface hosts="server" names="ppp0" address="10.0.1.1" netmask="255.255.255.0"/>
    <interface hosts="internetCloud" names="ppp0" address="10.0.1.2" netmask="255.255.255.0"/>
    <interface hosts="internetCloude" names="ppp1" address="10.0.2.1" netmask="255.255.255.0"/>
        <interface hosts="router0" names="ppp0" address="10.0.2.2" netmask="255.255.255.0"/>
        <interface hosts="router0" names="eth0" address="10.0.3.1" netmask="255.255.255.0"/>
        <interface hosts="router0" names="eth1" address="10.0.4.1" netmask="255.255.255.0"/>
        <interface hosts="router1" names="eth0" address="10.0.3.2" netmask="255.255.255.0"/>
        <interface hosts="router1" names="eth1" address="10.0.5.1" netmask="255.255.255.0"/>
        <interface hosts="router2" names="eth0" address="10.0.4.2" netmask="255.255.255.0"/>
        <interface hosts="router2" names="ppp0" address="10.0.6.1" netmask="255.255.255.0"/>
        <interface hosts="accessPoint" names="wlan0" address="10.0.8.1" netmask="255.255.255.0"/>
    
  
    
  <!-- OSPF multicast group -->
  <multicast-group hosts="router* pgw ue*" address="224.0.0.0"/>
</config>